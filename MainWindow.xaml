<Window x:Class="ARVpr7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ARVpr7"
        mc:Ignorable="d"
        Title="Libraly IT-system" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="105"/>
            <RowDefinition Height="314"/>
        </Grid.RowDefinitions>
        <StackPanel Background="White" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="Libraly IT-system" FontSize="50"/>
            <TextBlock
                FontSize="14pt"
                FontWeight="Bold"
                Margin="10,35"
                VerticalAlignment="Center"
            Text="{Binding ElementName=FrmMain, Path=Content.Title}" Width="317"/>
        </StackPanel>
        <Frame
           NavigationUIVisibility="Hidden"
           x:Name="FrmMain"
           Grid.Row="1"
           Grid.Column="0"
           />
    </Grid>
</Window>
